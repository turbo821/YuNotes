@{
    ViewData["Title"] = "Sign Up";
}
@model YuNotes.ViewModels.SignInViewModel;

@section Links {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="form">
    <ul class="tab-group">
        <li class="tab"><a asp-action="Login">Вход</a></li>
        <li class="tab active"><a asp-action="SignUp">Регистрация</a></li>
    </ul>

    <div id="signup">
        <h1>Регистрация</h1>
        <form asp-action="SignUp" method="post">
            <div class="top-row">
                <div class="field-wrap">
                    <label asp-for="Nickname">
                        Псевдоним<span class="req">*</span>
                    </label>
                    <input type="text" autocomplete="off" asp-for="Nickname" />
                    <span asp-validation-for="Nickname" />
                </div>

            </div>
            <div class="field-wrap">
                <label asp-for="Email">
                    Электронная почта<span class="req">*</span>
                </label>
                <input autocomplete="off" asp-for="Email"/>
                <span asp-validation-for="Email" />
            </div>
            <div class="field-wrap">
                <label asp-for="Password">
                    Пароль<span class="req">*</span>
                </label>
                <input autocomplete="off" asp-for="Password"/>
                <span asp-validation-for="Password" />
            </div>
            <div class="field-wrap">
                <label asp-for="PasswordConfirm">
                    Повторите пароль<span class="req">*</span>
                </label>
                <input autocomplete="off" asp-for="PasswordConfirm"/>
                <span asp-validation-for="PasswordConfirm" />
            </div>

            <button type="submit" class="button button-block">Начать</button>
        </form>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}