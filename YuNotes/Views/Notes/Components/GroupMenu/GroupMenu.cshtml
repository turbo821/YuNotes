@model CatalogViewModel

<li class="list-group-item">
    <span>Все</span>
    <span>
        <a asp-action="Catalog" asp-route-SortOrder="@Model.SortViewModel.Current" 
            asp-route-SearchTitle="@Model.SearchTitle">
            <img class="find-img" src="~/img/icons8-find.svg" /></a>
        <a>
            <img class="delete-img-nonopacity" src="~/img/icons8-delete-30.png" />
        </a>
    </span>
</li>
@foreach (var group in Model.GroupModel.NoteGroups)
{
    <li class="list-group-item">
        <span>@group.Name</span>
        <span>
            <a asp-action="Catalog" asp-route-GroupId="@group.Id"
                asp-route-SortOrder="@Model.SortViewModel.Current" asp-route-SearchTitle="@Model.SearchTitle">
                <img class="find-img" src="~/img/icons8-find.svg" />
            </a>
            <a asp-action="DeleteGroup" asp-route-id="@group.Id" >
               <img class="delete-img" src="~/img/icons8-delete-30.png" />
           </a>
        </span>
    </li>
}
<li class="list-group-item">
    <form method="post" asp-action="AddGroup" class="add-group">
        <input type="hidden" name="Id" value="@Guid.NewGuid()" />
        <input type="text" name="Name" class="form-control col-12" autocomplete="off"/>
        <input type="submit" class="btn btn-success col-12" value="Добавить группу" />
    </form>
</li> 
