@{
    ViewData["Title"] = "Catalog";
}

@model IEnumerable<NoteModel> 

<h2>Твои заметки</h2>

@foreach(var note in Model)
{
    <div style="width: 300px">
        <h2>@note.Title</h2>
        @* <h4>@note.Group</h4> *@
        <p>@note.Text</p>
        <div class="row">
            <form class="col" method="post" asp-action="DeleteNote" asp-route-id="@note.Id">
                <input type="submit" value="Удалить" />
            </form>

            <form class="col" method="get" asp-action="Note" asp-route-id="@note.Id">
                <input type="submit" value="Изменить" />
            </form>
        </div>


    </div>
}


<p><a asp-action="Note" asp-route-id="@Guid.NewGuid()">Создать заметку</a></p>
